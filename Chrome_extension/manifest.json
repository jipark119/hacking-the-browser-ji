{
    "manifest_version": 2,
    "name": "Flashlight",
    "version": "1.0",

    "browser_action": {
        "default_popup":"popup.html"
    },

    "icons": { "16": "fl.png",
        "48": "fl.png",
       "128": "fl.png" },

    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ],

    "permissions":["activeTab"]

}